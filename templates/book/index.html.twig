{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="card">
        <div class="card-body">
            <a href="/book/create" class="btn btn-primary">Добавить книгу</a>
        </div>
    </div>
    {% for book in books %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ book.name }}</h5>
            <p class="card-text">Год: {{ book.year }}</p>
            <p class="card-text">Автор: {% for author in book.authors %}{{ author.name }}, {% endfor %}</p>
            <a href="/book/edit/{{ book.id }}">Изменить</a>
        </div>
    </div>
    {% endfor %}
{% endblock %}
